{{ register_asset_bundle('frontend/assets/AppAsset') }}
{{ void(this.beginPage()) }}

<!DOCTYPE html>
<html lang="{{ app.language }}">

<head>
    <meta charset="{{ app.charset }}" />
    <link rel="apple-touch-icon" sizes="76x76" href="/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        {{ this.title }}
    </title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    {{ html.csrfMetaTags | raw }}
    {{ void(this.head) }}
</head>

<body class="landing-page sidebar-collapse">
{{ void(this.beginBody()) }}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg fixed-top navbar-transparent" color-on-scroll="300">
    <div class="container">
        <div class="navbar-translate">
            <a class="navbar-brand" href="{{ url.to('/site/index') }}" data-placement="bottom">
                {{ app.name }}
            </a>
            <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse justify-content-end" id="navigation">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ url.to('/site/about') }}" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a href="{{ url.to('/site/contact') }}" class="nav-link">Contact</a>
                </li>
                <li class="nav-item">
                    <a href="https://demos.creative-tim.com/paper-kit-2/docs/1.0/getting-started/introduction.html" target="_blank" class="nav-link"><i class="nc-icon nc-book-bookmark"></i> Paper Documentation</a>
                </li>
                <li class="nav-item">
                    {% if app.user.isGuest %}
                        <a href="{{ url.to('/site/login') }}" class="nav-link">Login</a>
                    {% else %}
                        <a href="{{ url.to('/site/logout') }}" class="nav-link" data-method="post">Logout ({{ app.user.identity.username }})</a>
                    {% endif %}
                </li>
                {% if app.user.isGuest %}
                <li class="nav-item">
                    <a href="{{ url.to('/site/signup') }}" class="nav-link">Signup</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->
{{ content | raw}}
